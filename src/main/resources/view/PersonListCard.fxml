<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
      </HBox>
      <VBox fx:id="tags" VBox.vgrow="ALWAYS" />
        <HBox>
          <Label fx:id="phonePlaceholder" text="Phone: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="emailPlaceholder" text="Email: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="ppPlaceholder" text="Parent Phone: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="parentPhone" styleClass="cell_small_label" text="\$parentPhone" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="pePlaceholder" text="Parent Email: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="parentEmail" styleClass="cell_small_label" text="\$parentEmail" wrapText="true" />
        </HBox>
        <HBox>
          <Label text="Address: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="schPlaceholder" text="School: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="school" styleClass="cell_small_label" text="\$school" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="streamPlaceholder" text="Academic Stream: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="acadStream" styleClass="cell_small_label" text="\$acadStream" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="lvlPlaceholder" text="Academic Level: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="acadLevel" styleClass="cell_small_label" text="\$acadLevel" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="feePlaceholder" text="Outstanding Fee: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="outstandingFee" styleClass="cell_small_label" text="\$outstandingFee" wrapText="true" />
        </HBox>
        <HBox>
          <Label fx:id="remarkPlaceholder" text="Remark: " styleClass="cell_medium_label" wrapText="true"/>
          <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" wrapText="true" />
        </HBox>

    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
