<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="500.0" minWidth="600.0" title="Student View" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@Fonts.css" />
                <URL value="@DarkTheme.css" />
                <URL value="@Extensions.css" />
            </stylesheets>
            <HBox fx:id="cardPane" prefHeight="181.0" prefWidth="291.0">
                <GridPane prefHeight="182.0" prefWidth="360.0" HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200" />
                    </columnConstraints>
                    <VBox alignment="CENTER_LEFT" minHeight="102.0" prefHeight="234.0" prefWidth="374.0" styleClass="grid-pane" GridPane.columnIndex="0">
                        <padding>
                            <Insets bottom="5" left="15" right="5" top="5" />
                        </padding>
                        <Label fx:id="message" styleClass="student_view_big_label" />
                        <Label />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Label fx:id="name" styleClass="student_view_medium_label" />
                        </HBox>
                        <FlowPane fx:id="tags" hgap="5" />
                        <Label fx:id="classCode" styleClass="student_view_small_label" />
                        <Label fx:id="phone" styleClass="student_view_small_label" />
                        <Label fx:id="address" styleClass="student_view_small_label" />
                        <Label fx:id="email" styleClass="student_view_small_label" />
                  <FlowPane fx:id="tutorialGroups" hgap="5" layoutX="26.0" layoutY="175.0" />
                  <FlowPane fx:id="marks" hgap="5" layoutX="26.0" layoutY="99.0" />
                    </VBox>
               <rowConstraints>
                  <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
               </rowConstraints>
                </GridPane>
            </HBox>
        </Scene>
    </scene>
</fx:root>
