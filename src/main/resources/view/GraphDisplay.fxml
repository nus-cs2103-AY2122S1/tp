<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.StackPane?>

<StackPane maxHeight="Infinity" maxWidth="Infinity"
           minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="350" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BarChart fx:id="bc"  title="Monthly Revenue">
        <xAxis>
          <CategoryAxis label="Month" side="BOTTOM"/>
        </xAxis>
        <yAxis>
          <NumberAxis label="Revenue($)"  side="LEFT"/>
        </yAxis>
      </BarChart>
   </children>
</StackPane>
