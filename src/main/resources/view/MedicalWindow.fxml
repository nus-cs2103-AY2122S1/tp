<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" minHeight="500" title="Medical" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/hospital.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@Fonts.css" />
                <URL value="@MedicalWindow.css" />
            </stylesheets>

            <VBox alignment="CENTER" minWidth="400" prefWidth="400" minHeight="500"
                  styleClass="pane-with-border">
                <children>
                    <Label fx:id="name" styleClass="cell_big_label" text="Label" wrapText="true">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Label>
                </children>
                <children>
                    <ScrollPane VBox.vgrow="ALWAYS">
                        <content>
                            <Label fx:id="medicalHistory" text="Label" wrapText="true"/>
                        </content>
                    </ScrollPane>
                </children>
                <opaqueInsets>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </opaqueInsets>
                <padding>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
