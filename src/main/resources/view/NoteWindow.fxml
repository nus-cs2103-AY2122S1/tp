<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<Stage xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" onCloseRequest="#handleExit">
    <scene>
        <Scene>
         <VBox>
            <children>
                  <AnchorPane prefHeight="0.0" prefWidth="600"/>
               <MenuBar prefHeight="25.0" prefWidth="470.0">
                  <menus>
                     <Menu mnemonicParsing="false" text="File">
                        <items>
                           <MenuItem mnemonicParsing="false" text="Save" onAction="#handleSave"/>
                           <MenuItem mnemonicParsing="false" text="Close" onAction="#handleExit"/>
                        </items>
                     </Menu>
                  </menus>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
               </MenuBar>
               <TextArea fx:id="noteTextArea" onKeyPressed="#handleOnKeyPressed" prefHeight="326.0" prefWidth="600.0" text="&#10;&#10;&#10;&#10;" VBox.vgrow="ALWAYS">
                  <font>
                     <Font name="Calibri" size="13.0" />
                  </font>
               </TextArea>
            </children>
         </VBox>
        </Scene>
    </scene>
</Stage>
