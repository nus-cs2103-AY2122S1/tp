<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root onCloseRequest="#handleCloseButtonAction" resizable="false" title="Warning" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/info_icon.png" />
    </icons>
    <scene>
        <Scene>

            <VBox alignment="CENTER" prefHeight="98.0" prefWidth="377.0">
                <children>
                    <Label fx:id="warningMessage" prefHeight="53.0" prefWidth="335.0" textAlignment="CENTER" wrapText="true">
                    </Label>
                    <HBox alignment="BOTTOM_CENTER" prefHeight="35.0" prefWidth="362.0">
                        <children>
                            <Button fx:id="yesButton" mnemonicParsing="false" onAction="#handleButtonAction" text="Confirm">
                                <HBox.margin>
                                    <Insets left="5.0" />
                                </HBox.margin>
                            </Button>
                            <Button fx:id="noButton" mnemonicParsing="false" onAction="#handleButtonAction" text="Cancel">
                                <HBox.margin>
                                    <Insets left="5.0" />
                                </HBox.margin>
                            </Button>
                        </children>
                    </HBox>
                </children>
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
