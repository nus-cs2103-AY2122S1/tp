<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="commandHelpPane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@HelpWindow.css" />
        <URL value="@CommandHelpMessage.css" />
    </stylesheets>
    <content>
        <VBox>
            <HBox fx:id="descriptionBox">
                <AnchorPane fx:id="descriptionHeaderPane">
                    <Label fx:id="descriptionHeader" text="Description" prefWidth="100.0">
                        <padding>
                            <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                        </padding>
                    </Label>
                </AnchorPane>
                <Label fx:id="description" wrapText="true">
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                    </padding>
                </Label>
            </HBox>
            <HBox fx:id="usageBox">
                <AnchorPane fx:id="usageHeaderPane">
                    <Label fx:id="usageHeader"  text="Usage" prefWidth="100.0">
                        <padding>
                            <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                        </padding>
                    </Label>
                </AnchorPane>
                <Label fx:id="usage" wrapText="true">
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                    </padding>
                </Label>
            </HBox>
            <HBox fx:id="examplesBox">
                <AnchorPane fx:id="examplesHeaderPane">
                    <Label fx:id="examplesHeader"  text="Examples" prefWidth="100.0">
                        <padding>
                            <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                        </padding>
                    </Label>
                </AnchorPane>
                <Label fx:id="examples" wrapText="true">
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                    </padding>
                </Label>
            </HBox>
        </VBox>
    </content>
</TitledPane>
