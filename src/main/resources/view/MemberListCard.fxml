<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="index" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$name" styleClass="cell_big_label" />
        <Label fx:id="tier" text="\$tier" styleClass="cell_big_label" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label, cell_label_width_80" text="ID: " />
        <Label fx:id="id" styleClass="cell_small_label" text="\$id" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label, cell_label_width_80" text="Phone: " />
        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label, cell_label_width_80" text="Email: " />
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label, cell_label_width_80" text="Credit: " />
        <Label fx:id="credit" styleClass="cell_small_label" text="\$credit" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label, cell_label_width_80" text="Point: " />
        <Label fx:id="point" styleClass="cell_small_label" text="\$point" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <Label styleClass="cell_small_label, cell_label_width_80" text="Coming: " />
        <Label fx:id="reservation" styleClass="cell_small_label" text="\$reservation" />
      </HBox>
    </VBox>
  </GridPane>
</HBox>
