<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.collections.FXCollections?>
<?import seedu.address.ui.CommandDetails?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@HelpWindow.css" />
        <URL value="@TableView.css" />
      </stylesheets>

      <AnchorPane prefHeight="200" prefWidth="180">
        <children>
          <VBox>
            <TableView fx:id="helpTable" AnchorPane.topAnchor="1.0">
              <columns>
                <TableColumn text="Feature" prefWidth="220">
                  <cellValueFactory><PropertyValueFactory property="featureName" />
                  </cellValueFactory>
                </TableColumn>
                <TableColumn text="Command" prefWidth="290">
                  <cellValueFactory><PropertyValueFactory property="commandStructure" />
                  </cellValueFactory>
                </TableColumn>
              </columns>
              <items>
                <FXCollections fx:factory="observableArrayList">
                  <!-- You can add command details here as well. -->
                </FXCollections>
              </items>
            </TableView>
          </VBox>
          <HBox alignment="CENTER" AnchorPane.bottomAnchor="1.0">
            <children>
              <Label fx:id="helpMessage" text="Label">
                <HBox.margin>
                  <Insets right="5.0" />
                </HBox.margin>
              </Label>
              <Button fx:id="copyButton" mnemonicParsing="false" onAction="#openUserGuide" text="Visit URL">
                <HBox.margin>
                  <Insets left="32.0" />
                </HBox.margin>
              </Button>
            </children>
            <opaqueInsets>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </opaqueInsets>
            <padding>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </padding>
          </HBox>
        </children>
      </AnchorPane>
    </Scene>
  </scene>
</fx:root>
