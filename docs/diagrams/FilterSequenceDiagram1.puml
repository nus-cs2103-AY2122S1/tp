@startuml
!include style.puml

mainframe **sd**  FilterCommand execution

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant "f:FilterCommand" as FilterCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

LogicManager -> FilterCommand : execute()
activate FilterCommand

FilterCommand -> Model
activate Model

alt "grade parameter is present"
    Model -> Model : filter student and lesson list by grade
    
else "subject parameter is present"
    Model -> Model : filter lesson list by subject

else "both grade and subject parameters are present"
    Model -> Model : filter student list by subject, filter lesson list by subject and grade
end

Model --> FilterCommand
deactivate Model

create CommandResult
FilterCommand -> CommandResult
activate CommandResult

CommandResult --> FilterCommand
deactivate CommandResult

LogicManager <-- FilterCommand  : commandResult
deactivate FilterCommand
@enduml
