@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

package "Lesson" {
    Class "{abstract}\nLesson" as Lesson
    Class RecurringLesson
    Class MakeUpLesson
    Class Date
    Class TimeRange
    Class Subject
    Class Homework
    Class LessonRates
}

Lesson *-up-> "2" Date
Lesson *-up-> TimeRange
Lesson *-up-> Subject
Lesson *-up-> LessonRates
Lesson *-up-> "*" Homework

Homework -[hidden]left-> Subject
Subject -[hidden]left-> TimeRange
TimeRange -[hidden]left-> Date

Lesson <|-down- RecurringLesson
Lesson <|-down- MakeUpLesson

@enduml
