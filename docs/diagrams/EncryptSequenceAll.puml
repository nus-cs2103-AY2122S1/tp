@startuml
!include style.puml

box Storage STORAGE_COLOR_T1
participant ":JsonCsBookStorage" as JsonCsBookStorage STORAGE_COLOR
participant "serializableCsBook:JsonSerializableCsBook" as JsonSerializableCsBook STORAGE_COLOR
end box

box Commons COMMONS_COLOR_T1
participant "<<class>>\nEncryptedJsonUtil" as EncryptedJsonUtil COMMONS_COLOR
participant "<<class>>\nEncryptionUtil" as EncryptionUtil COMMONS_COLOR
participant "<<class>>\nFileUtil" as FileUtil COMMONS_COLOR
end box

[-> JsonCsBookStorage : saveCsBook(csBook)
activate JsonCsBookStorage

create JsonSerializableCsBook
JsonCsBookStorage -> JsonSerializableCsBook
activate JsonSerializableCsBook

JsonSerializableCsBook --> JsonCsBookStorage
deactivate JsonSerializableCsBook

JsonCsBookStorage -> EncryptedJsonUtil : saveEncryptedJsonFile(serializableCsBook, filePath)
activate EncryptedJsonUtil

EncryptedJsonUtil -> EncryptionUtil : encryptSerializableObject(serializableCsBook)
activate EncryptionUtil

EncryptionUtil --> EncryptedJsonUtil : sealedObject
deactivate EncryptionUtil

EncryptedJsonUtil -> FileUtil : writeToEncryptedFile(filePath, sealedObject)
activate FileUtil

FileUtil --> EncryptedJsonUtil
deactivate FileUtil
destroy JsonSerializableCsBook

EncryptedJsonUtil --> JsonCsBookStorage
deactivate EncryptedJsonUtil

[<-- JsonCsBookStorage
deactivate JsonCsBookStorage

@enduml
