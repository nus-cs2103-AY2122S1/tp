@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":Logic\nManager" as LogicManager LOGIC_COLOR
participant ":Tuitione\nParser" as TuitioneParser LOGIC_COLOR
participant ":DeleteCommand\nParser" as DeleteCommandParser LOGIC_COLOR
participant "d:Delete\nCommand" as DeleteCommand LOGIC_COLOR
participant ":Command\nResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant "s:Student" as Student MODEL_COLOR
end box

[-> LogicManager : execute\n("delete 1")
activate LogicManager

LogicManager -> TuitioneParser : parseCommand\n("delete 1")
activate TuitioneParser

create DeleteCommandParser
TuitioneParser -> DeleteCommandParser
activate DeleteCommandParser

DeleteCommandParser --> TuitioneParser
deactivate DeleteCommandParser

TuitioneParser -> DeleteCommandParser : parse("1")
activate DeleteCommandParser

create DeleteCommand
DeleteCommandParser -> DeleteCommand
activate DeleteCommand

DeleteCommand --> DeleteCommandParser : d
deactivate DeleteCommand

DeleteCommandParser --> TuitioneParser : d
deactivate DeleteCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
DeleteCommandParser -[hidden]-> TuitioneParser
destroy DeleteCommandParser

TuitioneParser --> LogicManager : d
deactivate TuitioneParser

LogicManager -> DeleteCommand : execute()
activate DeleteCommand

DeleteCommand -> Student : unenrollFromLessons()
activate Student

Student -> DeleteCommand
deactivate Student

DeleteCommand -> Model : deleteStudent(1)
activate Model

Model -> Student : delete\nStudent(s)
destroy Student

Model --> DeleteCommand
deactivate Model

create CommandResult
DeleteCommand -> CommandResult
activate CommandResult

CommandResult --> DeleteCommand
deactivate CommandResult

DeleteCommand --> LogicManager : result
deactivate DeleteCommand

[<--LogicManager
deactivate LogicManager
@enduml
